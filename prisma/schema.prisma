generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Song {
  id     Int     @id @default(autoincrement())
  name   String
  tracks Track[]
}

model Track {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  song   Song    @relation(fields: [songId], references: [id])
  songId Int
  gain   Int     @default(1)
  pan    Int     @default(0)
  muted  Boolean @default(false)
  soloed Boolean @default(false)
  type   String?
  url    String?
}

